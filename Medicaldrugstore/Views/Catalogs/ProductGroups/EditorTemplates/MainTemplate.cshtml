@model Medicaldrugstore.Models.ProductGroup

@{
    Layout = null;
}

<div class="container-full create-item">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group margin-5-0">
        @Html.LabelFor(model => model.ProductGroupCode, htmlAttributes: new { @class = "control-label col-sm-5 align-right" })
        <div class="col-sm-5">
            @Html.EditorFor(model => model.ProductGroupCode, new { htmlAttributes = new { @class = "k-textbox" } })
            <br />
            @Html.ValidationMessageFor(model => model.ProductGroupCode, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="clear"></div>
    <div class="form-group margin-5-0">
        @Html.LabelFor(model => model.ProductGroupName, htmlAttributes: new { @class = "control-label col-sm-5 align-right" })
        <div class="col-sm-5">
            @Html.EditorFor(model => model.ProductGroupName, new { htmlAttributes = new { @class = "form-control" } })
            <br />
            @Html.ValidationMessageFor(model => model.ProductGroupName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="clear"></div>
</div>
